= form_for @target do |f|
  -if @target.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@target.errors.count, "error")} prohibited this target from being saved:"
      %ul
        - @target.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :os
    = f.text_field :os
  .field
    = f.label :browser
    = f.text_field :browser
  .field
    = f.label :browser_version
    = f.text_field :browser_version
  .actions
    = f.submit 'Save'
